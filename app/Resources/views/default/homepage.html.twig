{% extends 'base.html.twig' %}
  
  {% block stylesheets %}
  	<link rel="stylesheet" href="{{ asset('css/starter-template.css') }}" />
  {% endblock %}

  {% block body %}

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Project name</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="#">Home</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="#contact">Contact</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container">

      	<h4 style="margin-top:40px;">Tasks


      		<span class="btn btn-default">
      			<a href="createTask">Add</a>
      		</span>
      	</h4>

          <table class="table table-bordered table-hover">
          	<thead>
          		<tr>
          			<th>L.P</th>
          			<th>Name</th>
          			<th>Options</th>
          		</tr>
          	</thead>
          	<tbody>
          		{% for task in tasks %}
          		<tr>
          			<td>1</td>
          			<td>{{task.name}}</td>
          			<td>
          				<span>
          					<a href="showTask/{{task.id}}" class="btn btn-default">
          						Show
          					</a>
          				</span>

          				<span>
          					<a href="editTask/{{task.id}}" class="btn btn-default">
          						Edit
          					</a>
          				</span>

          				<span>
          					<a href="deleteTask/{{task.id}}" class="btn btn-default">
          						Delete
          					</a>
          				</span>
          			</td>
          		</tr>
          		{% endfor %}
          	</tbody>
          </table>
    </div><!-- /.container -->

 {% endblock %}

